mixin validationErrorSummary(errors)
  if errors
    div(class='alert' role='alert')
      p The following error(s) occurred:
      ul
        each error in errors
          li= error

mixin usersQuestion(question)
  div
    div
      div
        img(src=question.user.profilePhoto)
      div
        div
          span=question.user.name
        div
          div
            span=question.user.profession
          div
            dateCreated
    div
      span=questions.title
    div
      p=question.content
    div
      div
        div
          button(type="button") Like!
        div
          span=likes
      div
        button(type="button") Answer!
