extends layout
include utils.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.1/css/all.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  div(class="home-container")
    div(class="categories")
      div(class="cat_label") Categories
      each category in categories
        +generateCategories(category)
    div(class="questions")
      div(class="q_label") Questions
        each question in questions
          +usersQuestion(question)

    div(class="tbd")
      div(class="tbd_label") TBD
      div
      if user
          img(src=(user.profilePhoto || 'https://cdn.discordapp.com/attachments/889944469359718421/900129385720479744/whiteDuck.png') style='width:75px; height:75px;')
          a(href=`/users/${user.id}`) #{user.name}'s Account


